                    MDLabel:
                        text: "We leverage cutting-edge technology, including camera monitoring and AI algorithms, to provide real-time pet monitoring solutions."
                        font_size: "14sp"
                        halign: "center"
                        font_name: "MPoppins"
                        text_size: self.width - dp(40), None
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0, 0.8
                        size_hint_y: None
                        height: self.texture_size[1] + dp(10)

                # Background Section
                MDBoxLayout:
                    orientation: 'vertical'
